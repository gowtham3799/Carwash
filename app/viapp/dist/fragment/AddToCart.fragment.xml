					<HBox alignItems="Start" justifyContent="SpaceBetween">
						<HBox>
							<Title text="{ServicesViewModel>MaterialName}" wrapping="true"
								class="Cl_MaterialTitleColor sapUiTinyMarginTop sapUiSmallMarginBegin sapUiTinyMarginEnd"/>
